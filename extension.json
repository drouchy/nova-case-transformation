{
    "identifier": "dev.rouchy.CaseTransformation",
    "name": "Case Transformation",
    "organization": "Rouchy",
    "description": "Change the case of the selected text - supports Camel, Snake and Keba Case",
    "version": "1.0",
    "categories": ["commands"],
    
    "repository": "https://github.com/drouchy/nova-case-transformation",
    "bugs": "https://github.com/drouchy/nova-case-transformation/issues",
    
    "main": "main.js",
    
    "activationEvents": [
        "onLanguage:*"
    ],
    
    "entitlements": {
        
    },
    
    "commands": {
        "editor": [
            {
                "title": "Make Camel Case",
                "command": "case-transformation.camelCase",
                "when": "editorHasFocus"
            },
            {
                "title": "Make Snake Case",
                "command": "case-transformation.snakeCase",
                "when": "editorHasFocus"
            },
            {
                "title": "Make Kebab Case",
                "command": "case-transformation.kebabCase",
                "when": "editorHasFocus"
            }
        ]
    },
    
    "config": [
    ]
}
